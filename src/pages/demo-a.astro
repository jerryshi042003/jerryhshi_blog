---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';

const stops = [
  {
    year: '2025',
    org: 'LA Kings',
    role: 'Full-stack data engineer',
    note: 'Many hats, real-time pipelines',
    color: '#111111'
  },
  {
    year: '2024',
    org: 'USA Cycling',
    role: 'Performance data scientist',
    note: 'Velodrome > your office',
    color: '#1E6BFF'
  },
  {
    year: '2023',
    org: 'UCLA Tennis',
    role: 'Analytics founder',
    note: '80 students obsessed with tennis',
    color: '#F6C445'
  },
  {
    year: '2022',
    org: 'Stats Perform',
    role: 'Sports betting data scientist',
    note: 'Odds, models, fast data',
    color: '#FF5E5E'
  },
  {
    year: '2022',
    org: 'US Open',
    role: 'Performance analyst',
    note: 'Watched every match',
    color: '#2FBF71'
  }
];
---

<Base title="Work Demo A">
  <main class="page">
    <Nav currentPage="demo-a" />

    <header class="hero">
      <div class="hero-left">
        <p class="eyebrow">Jerry Shi</p>
        <h1>Sports analytics, built like a transit map.</h1>
        <p class="sub">Short, clear, and clickable — designed for fast scanning on desktop and mobile.</p>
      </div>
      <div class="hero-right">
        <a class="resume" href="/jerry-shi-resume.pdf" target="_blank">Get Resume</a>
      </div>
    </header>

    <section class="timeline" aria-label="Work timeline">
      {stops.map((stop, index) => (
        <article class="stop">
          <div class="rail">
            <span class="dot" style={`--dot:${stop.color}`}></span>
            {index < stops.length - 1 && <span class="line"></span>}
          </div>
          <div class="content">
            <div class="title">
              <span class="year">{stop.year}</span>
              <span class="org">{stop.org}</span>
            </div>
            <p class="role">{stop.role}</p>
            <p class="note">{stop.note}</p>
            <button class="cta">View details ?</button>
          </div>
        </article>
      ))}
    </section>

    <section class="links" aria-label="Links">
      <h2>Links</h2>
      <div class="link-row">
        <a href="https://youtube.com/@jerrythegoatshi" target="_blank">YouTube</a>
        <a href="https://instagram.com/jerrythegoatshi" target="_blank">Instagram</a>
        <a href="https://tiktok.com/@jerrythegoatshi" target="_blank">TikTok</a>
      </div>
    </section>
  </main>
</Base>

<style>
  .page {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    min-height: 100vh;
    padding: 6rem 6vw 4rem;
    background: #fff;
    color: #111;
  }

  .hero {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 3rem;
    margin-bottom: 3.5rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.7rem;
    margin-bottom: 0.75rem;
  }

  h1 {
    font-size: clamp(2.2rem, 5vw, 4rem);
    line-height: 1.05;
    margin-bottom: 1rem;
  }

  .sub {
    max-width: 36rem;
    font-size: 1rem;
    color: #444;
  }

  .resume {
    border: 2px solid #111;
    padding: 0.9rem 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.8rem;
    text-decoration: none;
    color: #111;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    max-width: 900px;
  }

  .stop {
    display: grid;
    grid-template-columns: 40px 1fr;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .rail {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    padding-top: 0.35rem;
  }

  .dot {
    width: 18px;
    height: 18px;
    border-radius: 999px;
    background: var(--dot);
    border: 2px solid #111;
  }

  .line {
    flex: 1;
    width: 2px;
    background: #111;
    margin-top: 8px;
  }

  .content {
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 1.5rem;
  }

  .title {
    display: flex;
    gap: 1.5rem;
    align-items: baseline;
  }

  .year {
    font-size: 0.85rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #555;
  }

  .org {
    font-size: 1.4rem;
    letter-spacing: 0.04em;
    font-weight: 600;
  }

  .role {
    font-size: 0.95rem;
    margin-top: 0.35rem;
  }

  .note {
    font-size: 0.9rem;
    margin-top: 0.2rem;
    color: #555;
  }

  .cta {
    margin-top: 0.6rem;
    border: none;
    background: none;
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    cursor: pointer;
  }

  .cta:hover {
    text-decoration: underline;
  }

  .links {
    margin-top: 4rem;
  }

  .links h2 {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    margin-bottom: 1rem;
  }

  .link-row {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .link-row a {
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.8rem;
  }

  @media (max-width: 900px) {
    .page {
      padding: 5rem 5vw 3rem;
    }

    .hero {
      flex-direction: column;
    }
  }

  @media (max-width: 600px) {
    .page {
      padding: 4.5rem 4vw 3rem;
    }

    .stop {
      grid-template-columns: 28px 1fr;
      gap: 1rem;
    }

    .dot {
      width: 14px;
      height: 14px;
    }

    .org {
      font-size: 1.1rem;
    }
  }
</style>
