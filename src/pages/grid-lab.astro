---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';
import Grid from '../components/Grid.astro';

const demoItems = [
  {
    id: 'la-kings',
    label: 'LA Kings',
    image: '/images/work/la-kings.png'
  },
  {
    id: 'usa-cycling',
    label: 'USA Cycling',
    image: '/images/work/usa-cycling.png'
  },
  {
    id: 'ucla',
    label: 'UCLA Tennis',
    image: '/images/work/ucla.png'
  },
  {
    id: 'opta',
    label: 'Opta / Stats Perform',
    image: '/images/work/opta-stats-perform.png'
  },
  {
    id: 'usta',
    label: 'US Open',
    image: '/images/work/usta-us-open.png'
  },
  {
    id: 'youtube',
    label: 'YouTube',
    image: '/images/content/youtube.png'
  },
  {
    id: 'instagram',
    label: 'Instagram',
    image: '/images/content/ig.png'
  },
  {
    id: 'tiktok',
    label: 'TikTok',
    image: '/images/content/tiktok.png'
  }
];
---

<Base title="GRID LAB">
  <main>
    <Nav currentPage="grid" />

    <header class="page-header">
      <h1>Grid Style Lab</h1>
      <p>Same assets, three different image systems. Pick the one that feels most intentional.</p>
    </header>

    <section class="section">
      <div class="section-header">
        <h2>Option A — Logo Contain Box</h2>
        <p>All logos sit inside the same inner box to normalize optical size.</p>
      </div>
      <Grid class="grid-style grid-style--contain">
        {demoItems.map((item) => (
          <div class="tile">
            <div class="tile-media tile-media--contain">
              <div class="logo-box">
                <img src={item.image} alt={item.label} loading="lazy" />
              </div>
            </div>
            <span class="tile-label">{item.label}</span>
          </div>
        ))}
      </Grid>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Option B — Type Tiles</h2>
        <p>No logos. Just type and spacing. Most consistent and Yeezy-like.</p>
      </div>
      <Grid class="grid-style grid-style--type">
        {demoItems.map((item) => (
          <div class="tile tile--type">
            <div class="tile-media tile-media--type">
              <span class="type-title">{item.label}</span>
            </div>
            <span class="tile-label">View</span>
          </div>
        ))}
      </Grid>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Option C — Mono Stamp</h2>
        <p>Same contain box, but quiet grayscale to reduce brand noise.</p>
      </div>
      <Grid class="grid-style grid-style--mono">
        {demoItems.map((item) => (
          <div class="tile">
            <div class="tile-media tile-media--mono">
              <div class="logo-box">
                <img src={item.image} alt={item.label} loading="lazy" />
              </div>
            </div>
            <span class="tile-label">{item.label}</span>
          </div>
        ))}
      </Grid>
    </section>
  </main>
</Base>

<style>
  main {
    font-family: 'Space Mono', monospace;
    min-height: 100vh;
    padding: 6rem 0 4rem;
  }

  .page-header {
    padding: 0 6vw 2.5rem;
  }

  .page-header h1 {
    font-size: clamp(1.8rem, 3vw, 2.6rem);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin: 0 0 0.75rem;
  }

  .page-header p {
    max-width: 40rem;
    font-size: 0.95rem;
    line-height: 1.6;
    color: #555;
    margin: 0;
  }

  .section {
    padding: 2.5rem 0 4rem;
  }

  .section-header {
    padding: 0 6vw 1.75rem;
  }

  .section-header h2 {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin: 0 0 0.5rem;
  }

  .section-header p {
    margin: 0;
    max-width: 34rem;
    color: #666;
    font-size: 0.85rem;
    line-height: 1.6;
  }

  .tile {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
  }

  .tile-media {
    aspect-ratio: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border: 1px solid #111;
    background: #fff;
  }

  .tile-media img {
    width: 100%;
    height: 100%;
  }

  .tile-label {
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #111;
    text-align: center;
  }

  .tile-media--contain,
  .tile-media--mono {
    display: grid;
    place-items: center;
  }

  .logo-box {
    width: 70%;
    height: 70%;
    display: grid;
    place-items: center;
  }

  .logo-box img {
    object-fit: contain;
  }

  .tile-media--mono {
    background: #f3f3f3;
  }

  .tile-media--mono img {
    filter: grayscale(1) contrast(1.05);
  }

  .tile--type .tile-media--type {
    border: 1px solid #111;
    background: #fff;
    padding: 12%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .type-title {
    font-family: 'Helvetica Neue', 'Helvetica', Arial, sans-serif;
    font-size: clamp(0.85rem, 1.5vw, 1.2rem);
    text-transform: uppercase;
    letter-spacing: 0.14em;
    line-height: 1.2;
    color: #111;
  }

  @media (max-width: 900px) {
    main {
      padding: 5rem 0 3rem;
    }

    .page-header,
    .section-header {
      padding: 0 5vw 1.5rem;
    }
  }

  @media (max-width: 600px) {
    .page-header {
      padding: 0 4vw 2rem;
    }

    .section {
      padding: 2rem 0 3rem;
    }

    .tile {
      gap: 0.6rem;
    }

    .tile-label {
      font-size: 0.6rem;
    }
  }
</style>
