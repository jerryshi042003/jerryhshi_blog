---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';
import Grid from '../components/Grid.astro';
import ModalOverlay from '../components/Modal/ModalOverlay.astro';
import WorkModalContent from '../components/Modal/WorkModalContent.astro';
import { workItems } from '../data/modalData';
---

<Base title="SHI">
  <main>
    <Nav currentPage="work" />

    <section class="section">
      <Grid>
        <a href="/jerry-shi-resume.pdf" target="_blank" class="grid-item grid-item--inverted">
          <div class="grid-item-image">
            <span class="grid-item-text">Resume</span>
          </div>
        </a>
        {workItems.map((item, index) => (
          <button class="grid-item" data-index={index}>
            <div class="grid-item-image">
              <img src={item.image} alt={item.org} loading="lazy" />
            </div>
            <span class="grid-item-label">{item.label}</span>
          </button>
        ))}
      </Grid>
    </section>

    <!-- Work Modal -->
    <ModalOverlay id="work-modal" showNav={true}>
      <WorkModalContent itemCount={workItems.length} />
    </ModalOverlay>
  </main>
</Base>

<script define:vars={{ workItems }}>
  let currentIndex = 0;

  const modal = document.getElementById('work-modal');
  const modalImg = modal.querySelector('.modal-img');
  const modalYears = modal.querySelector('.modal-years');
  const modalRole = modal.querySelector('.modal-role');
  const modalDid = modal.querySelector('.modal-did');
  const modalLearned = modal.querySelector('.modal-learned');
  const modalDots = modal.querySelectorAll('.dot');
  const modalPrev = modal.querySelector('[data-modal-prev]');
  const modalNext = modal.querySelector('[data-modal-next]');

  function showItem(index) {
    currentIndex = index;
    const data = workItems[index];

    modalImg.src = data.image;
    modalImg.alt = data.org;
    modalYears.textContent = data.years;
    modalRole.textContent = `${data.role} Â· ${data.org}`;
    modalDid.innerHTML = data.did.map(d => `<li>${d}</li>`).join('');
    modalLearned.innerHTML = data.learned.map(l => `<li>${l}</li>`).join('');

    // Update dots
    modalDots.forEach((dot, i) => {
      dot.classList.toggle('active', i === index);
    });

    // Update nav visibility
    modalPrev.style.visibility = index === 0 ? 'hidden' : 'visible';
    modalNext.style.visibility = index === workItems.length - 1 ? 'hidden' : 'visible';
  }

  function openModal(index) {
    showItem(index);
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Open modal on work item click
  document.querySelectorAll('.grid-item[data-index]').forEach(item => {
    item.addEventListener('click', () => {
      const index = parseInt(item.dataset.index);
      openModal(index);
    });
  });

  // Navigation
  modal.querySelector('[data-modal-close]').addEventListener('click', closeModal);
  modalPrev.addEventListener('click', () => showItem(currentIndex - 1));
  modalNext.addEventListener('click', () => showItem(currentIndex + 1));

  modalDots.forEach((dot, i) => {
    dot.addEventListener('click', () => showItem(i));
  });

  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  document.addEventListener('keydown', (e) => {
    if (!modal.classList.contains('active')) return;
    if (e.key === 'Escape') closeModal();
    if (e.key === 'ArrowLeft' && currentIndex > 0) showItem(currentIndex - 1);
    if (e.key === 'ArrowRight' && currentIndex < workItems.length - 1) showItem(currentIndex + 1);
  });
</script>

<style>
  main {
    font-family: 'IBM Plex Mono', monospace;
    min-height: 100vh;
    padding-top: 5rem;
  }

  .section {
    padding: 3rem 0;
  }

  .section-header {
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.75rem;
    font-weight: 400;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #999;
    text-align: center;
    margin-bottom: 2rem;
  }

  /* Grid Items */
  .grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    opacity: 0;
    animation: fadeIn 0.3s ease-in-out forwards;
  }

  .grid-item:hover {
    opacity: 0.7;
  }

  .grid-item-image {
    aspect-ratio: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .grid-item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .grid-item-label {
    margin-top: 1rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #000;
    text-align: center;
    line-height: 1.4;
  }

  .grid-item--inverted .grid-item-image {
    background: #000;
  }

  .grid-item-text {
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #fff;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 600px) {
    main {
      padding-top: 4rem;
    }

    .section {
      padding: 2rem 0;
    }

    .section-header {
      font-size: 0.7rem;
      margin-bottom: 1.5rem;
    }

    .grid-item-label {
      font-size: 0.65rem;
      margin-top: 0.75rem;
    }

    .grid-item-text {
      font-size: 0.65rem;
    }
  }
</style>
