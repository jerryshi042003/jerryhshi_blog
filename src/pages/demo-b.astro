---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';

const stations = [
  {
    year: '2025',
    org: 'LA Kings',
    note: 'Full-stack · data engineer',
    blurb: 'Many hats, real-time pipelines',
    code: 'K'
  },
  {
    year: '2024',
    org: 'USA Cycling',
    note: 'Performance data scientist',
    blurb: 'Velodrome > your office',
    code: 'C'
  },
  {
    year: '2023',
    org: 'UCLA Tennis',
    note: 'Analytics founder',
    blurb: '80 students obsessed with tennis',
    code: 'U'
  },
  {
    year: '2022',
    org: 'Stats Perform',
    note: 'Sports betting data scientist',
    blurb: 'Odds, models, fast data',
    code: 'S'
  },
  {
    year: '2022',
    org: 'US Open',
    note: 'Performance analyst',
    blurb: 'Watched every match',
    code: 'O'
  }
];
---

<Base title="Work Demo B">
  <main class="page">
    <Nav currentPage="demo-b" />

    <header class="hero">
      <div>
        <p class="eyebrow">Jerry Shi · Work</p>
        <h1>Helvetica Stations</h1>
        <p class="sub">A subway-map inspired timeline: clear, compact, and built for scroll.</p>
      </div>
      <a class="resume" href="/jerry-shi-resume.pdf" target="_blank">Resume</a>
    </header>

    <section class="stations">
      {stations.map((station) => (
        <article class="station">
          <div class="badge" aria-hidden="true">{station.code}</div>
          <div class="body">
            <div class="topline">
              <span class="year">{station.year}</span>
              <span class="org">{station.org}</span>
            </div>
            <p class="note">{station.note}</p>
            <p class="blurb">{station.blurb}</p>
            <a class="cta" href="#">View ?</a>
          </div>
        </article>
      ))}
    </section>

    <section class="links">
      <h2>Links</h2>
      <div class="chips">
        <a href="https://youtube.com/@jerrythegoatshi" target="_blank">YouTube</a>
        <a href="https://instagram.com/jerrythegoatshi" target="_blank">Instagram</a>
        <a href="https://tiktok.com/@jerrythegoatshi" target="_blank">TikTok</a>
      </div>
    </section>
  </main>
</Base>

<style>
  .page {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    min-height: 100vh;
    padding: 6rem 6vw 4rem;
    background: #fdfdfb;
    color: #111;
  }

  .hero {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.7rem;
    margin-bottom: 0.6rem;
  }

  h1 {
    font-size: clamp(2.4rem, 6vw, 4.2rem);
    margin-bottom: 0.5rem;
  }

  .sub {
    color: #555;
    max-width: 32rem;
  }

  .resume {
    border: 2px solid #111;
    padding: 0.8rem 1.2rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
    color: #111;
    text-decoration: none;
  }

  .stations {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    max-width: 820px;
  }

  .station {
    display: grid;
    grid-template-columns: 56px 1fr;
    gap: 1.5rem;
    align-items: center;
    padding: 1.4rem 0;
    border-top: 1px solid #111;
  }

  .station:last-child {
    border-bottom: 1px solid #111;
  }

  .badge {
    width: 48px;
    height: 48px;
    border-radius: 999px;
    background: #111;
    color: #fff;
    display: grid;
    place-items: center;
    font-weight: 700;
    letter-spacing: 0.04em;
  }

  .topline {
    display: flex;
    gap: 1rem;
    align-items: baseline;
  }

  .year {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: #666;
  }

  .org {
    font-size: 1.3rem;
    font-weight: 600;
  }

  .note {
    font-size: 0.9rem;
    margin-top: 0.35rem;
  }

  .blurb {
    font-size: 0.9rem;
    color: #555;
  }

  .cta {
    display: inline-block;
    margin-top: 0.5rem;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #111;
  }

  .cta:hover {
    text-decoration: underline;
  }

  .links {
    margin-top: 4rem;
  }

  .links h2 {
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    margin-bottom: 1rem;
  }

  .chips {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .chips a {
    border: 1px solid #111;
    padding: 0.5rem 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-size: 0.75rem;
  }

  @media (max-width: 900px) {
    .page {
      padding: 5rem 5vw 3rem;
    }

    .hero {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media (max-width: 600px) {
    .page {
      padding: 4.5rem 4vw 3rem;
    }

    .station {
      grid-template-columns: 44px 1fr;
      gap: 1rem;
    }

    .badge {
      width: 38px;
      height: 38px;
    }

    .org {
      font-size: 1.1rem;
    }
  }
</style>
