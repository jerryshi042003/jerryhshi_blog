---
import Base from '../layouts/Base.astro';
import Nav from '../components/Nav.astro';
import Grid from '../components/Grid.astro';
import ModalOverlay from '../components/Modal/ModalOverlay.astro';
import SocialModalContent from '../components/Modal/SocialModalContent.astro';
import { contentItems } from '../data/modalData';
---

<Base title="SHI">
  <main>
    <Nav currentPage="content" />

    <section class="section">
      <Grid>
        {contentItems.map((item, index) => (
          <button class="grid-item" data-index={index}>
            <div class="grid-item-image">
              <img src={item.image} alt={item.platform} loading="lazy" />
            </div>
            <span class="grid-item-label">{item.platform}</span>
          </button>
        ))}
      </Grid>
    </section>

    <!-- Social Modal -->
    <ModalOverlay id="social-modal" showNav={false}>
      <SocialModalContent />
    </ModalOverlay>
  </main>
</Base>

<script define:vars={{ contentItems }}>
  const modal = document.getElementById('social-modal');
  const modalImg = modal.querySelector('.social-img');
  const modalPlatform = modal.querySelector('.social-platform');
  const modalHandle = modal.querySelector('.social-handle');
  const modalTagline = modal.querySelector('.social-tagline');
  const modalCta = modal.querySelector('.social-cta');
  const modalCtaText = modal.querySelector('.social-cta-text');

  function showItem(index) {
    const data = contentItems[index];

    modalImg.src = data.image;
    modalImg.alt = data.platform;
    modalPlatform.textContent = data.platform;
    modalHandle.textContent = data.handle;
    modalTagline.textContent = data.tagline;
    modalCta.href = data.externalUrl;
    modalCtaText.textContent = data.ctaText;
  }

  function openModal(index) {
    showItem(index);
    modal.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeModal() {
    modal.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Open modal on item click
  document.querySelectorAll('.grid-item[data-index]').forEach(item => {
    item.addEventListener('click', () => {
      const index = parseInt(item.dataset.index);
      openModal(index);
    });
  });

  // Close button
  modal.querySelector('[data-modal-close]').addEventListener('click', closeModal);

  // Click outside to close
  modal.addEventListener('click', (e) => {
    if (e.target === modal) closeModal();
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (!modal.classList.contains('active')) return;
    if (e.key === 'Escape') closeModal();
  });
</script>

<style>
  main {
    font-family: 'Space Mono', monospace;
    min-height: 100vh;
    padding-top: 5rem;
  }

  .section {
    padding: 3rem 0;
  }

  /* Grid Items */
  .grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    opacity: 0;
    animation: fadeIn 0.3s ease-in-out forwards;
  }

  .grid-item:hover {
    opacity: 0.7;
  }

  .grid-item-image {
    aspect-ratio: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .grid-item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .grid-item-label {
    margin-top: 1rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #000;
    text-align: center;
    line-height: 1.4;
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @media (max-width: 600px) {
    main {
      padding-top: 4rem;
    }

    .section {
      padding: 2rem 0;
    }

    .grid-item-label {
      font-size: 0.65rem;
      margin-top: 0.75rem;
    }
  }
</style>
