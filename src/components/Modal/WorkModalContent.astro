---
interface Props {
  itemCount: number;
}

const { itemCount } = Astro.props;
---

<div class="work-modal-view">
  <div class="modal-image">
    <img class="modal-img" src="" alt="" />
  </div>

  <div class="modal-dots">
    {Array.from({ length: itemCount }).map((_, i) => (
      <span class="dot" data-dot-index={i}></span>
    ))}
  </div>

  <div class="modal-info">
    <span class="modal-years"></span>
    <span class="modal-role"></span>

    <div class="modal-details">
      <div class="modal-column">
        <span class="modal-label">What I Did</span>
        <ul class="modal-did"></ul>
      </div>
      <div class="modal-column">
        <span class="modal-label">What I Learned</span>
        <ul class="modal-learned"></ul>
      </div>
    </div>
  </div>
</div>

<style>
  .modal-image {
    width: 100%;
    max-width: 350px;
    margin: 0 auto 1.5rem;
  }

  .modal-image img {
    width: 100%;
    height: auto;
    max-height: 300px;
    object-fit: contain;
  }

  .modal-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #ddd;
    cursor: pointer;
    transition: background 0.2s;
  }

  .dot.active {
    background: #000;
  }

  .modal-info {
    text-align: center;
  }

  .modal-years {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: #000;
    margin-bottom: 0.25rem;
  }

  .modal-role {
    display: block;
    font-size: 0.8rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .modal-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    text-align: left;
    max-width: 500px;
    margin: 0 auto;
  }

  .modal-column {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .modal-label {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #888;
  }

  .modal-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .modal-column li {
    font-size: 0.85rem;
    color: #333;
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 600px) {
    .modal-details {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
