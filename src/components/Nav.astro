---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;
---

<nav class="nav">
  <div class="nav-row">
    <a href="/" class:list={[{ active: currentPage === 'new' }]}>New</a>
    <a href="/work" class:list={[{ active: currentPage === 'work' }]}>Work</a>
    <a href="/content" class:list={[{ active: currentPage === 'content' }]}>Content</a>
  </div>
  <div class="nav-row">
    <a href="/blog" class:list={[{ active: currentPage === 'blog' }]}>Blog</a>
    <a href="/life" class:list={[{ active: currentPage === 'life' }]}>Life</a>
    <a href="/grid-lab" class:list={[{ active: currentPage === 'grid' }]}>Grid</a>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    padding: 1.5rem 2rem;
    background: #fff;
    z-index: 100;
  }

  .nav-row {
    display: flex;
    gap: 2rem;
  }

  .nav a {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    font-size: 0.9rem;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: #999;
    text-decoration: none;
    transition: color 0.2s;
  }

  .nav a:hover,
  .nav a.active {
    color: #000;
  }

  @media (max-width: 600px) {
    .nav {
      padding: 1rem 1.5rem;
    }

    .nav-row {
      gap: 1.5rem;
    }

    .nav a {
      font-size: 0.7rem;
    }
  }
</style>
