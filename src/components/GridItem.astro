---
interface Props {
  href?: string;
  image: string;
  label: string;
  alt?: string;
  target?: string;
  onClick?: string;
  dataIndex?: number;
  variant?: 'default' | 'inverted';
}

const {
  href,
  image,
  label,
  alt = label,
  target,
  onClick,
  dataIndex,
  variant = 'default'
} = Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag
  class:list={['grid-item', { 'grid-item--inverted': variant === 'inverted' }]}
  href={href}
  target={target}
  rel={target === '_blank' ? 'noopener' : undefined}
  data-index={dataIndex}
>
  <div class="grid-item-image">
    {variant === 'inverted' ? (
      <span class="grid-item-text">{label}</span>
    ) : (
      <img src={image} alt={alt} loading="lazy" />
    )}
  </div>
  {variant !== 'inverted' && (
    <span class="grid-item-label">{label}</span>
  )}
</Tag>

<style>
  .grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: pointer;
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    opacity: 0;
    animation: fadeIn 0.3s ease-in-out forwards;
  }

  .grid-item:hover {
    opacity: 0.7;
  }

  .grid-item-image {
    aspect-ratio: 1;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .grid-item-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .grid-item-label {
    margin-top: 1rem;
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #000;
    text-align: center;
    line-height: 1.4;
  }

  /* Inverted variant (for resume button) */
  .grid-item--inverted .grid-item-image {
    background: #000;
  }

  .grid-item-text {
    font-family: 'Space Mono', monospace;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #fff;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (max-width: 600px) {
    .grid-item-label {
      font-size: 0.65rem;
      margin-top: 0.75rem;
    }

    .grid-item-text {
      font-size: 0.65rem;
    }
  }
</style>
