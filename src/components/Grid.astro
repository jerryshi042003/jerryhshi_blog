---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['grid', className]}>
  <slot />
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 2vw;
    padding: 0 4vw;
    width: 100%;
  }

  @media (max-width: 1024px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3vw;
    }
  }

  @media (max-width: 600px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 4vw;
      padding: 0 3vw;
    }
  }
</style>
